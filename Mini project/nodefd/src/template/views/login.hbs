<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
        integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

    <title>Log-In</title>
</head>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        color: white;
    }

    .mid {
        display: flex;
        justify-content: center;
        margin-bottom: 2rem;
    }

    .mid2 {
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
    }

    .alert-danger {
        position: absolute;
        width: 100%;
        display: none;
        left:0%;
        top: 0%;
        color:black
    }

    .alert-primary {
        position: absolute;
        width: 100%;
        display: none;
        top: 0%;
        left:0%;
        color: black;
        background-color: rgb(15, 231, 26);
    }

    .box {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        /* margin-top: 4rem; */

    }
    h4{
        text-align: center;
    }
    .alert-danger {
    color: #721c24;
    background-color: #f03e4e;
    border-color: #000000;
}
    #main {
        position: relative;
        background: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.5)),url('./css/95cdfeef.jpg');
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
        height: 100vh;
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
    }
    .tex{
        font-size: 1.5rem;
    }

    .form-control {
        width: 30rem;
    }

    .inp {
        border: 3px solid black;
        font-size: 1.2rem;
    }

  .btn{
    font-size: 1.5rem;
  }
  .btn-primary {
 border-radius: 20%;}
  .btn-success {
 border-radius: 20%;}

    h3 {
        
        text-align: center;
        
    }
h1{
    margin-top: 3rem;
}
</style>

<body>
    <div id="main">
        <div class="container">

            <div class="box ">
                <div class="head">
                    <h1>Sign-Up</h1>
                </div>
                <form>
                    <div class="form-group">
                        <label for="formGroupExampleInput" class="tex"><h4>NAME:</h4></label>
                        <input type="text" class="form-control inp" id="formGroupExampleInput" placeholder="Your Name">
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput2" class="tex"><h4>NUMBER:</h4></label>
                        <input type="number" class="form-control inp" id="formGroupExampleInput2"
                            placeholder="Enter Phone Number">
                    </div>
                    <div class="mid">
                        <button type="button" class="btn btn-primary" id="bts">OTP</button>
                    </div>
            </div>

            <div class="form-group  mid2">
                <label for="inputPassword4" class="tex"><h4>ENTER OTP:</h4></label>
                <input type="password" placeholder="Enter OTP" class="form-control inp" id="inputPassword4">
            </div>
            <div class="mid">

                <button type="button" id="bts2" class="btn btn-success">Submit</button>
            </div>
            </form>
        </div>
        <div class="al">
            <div class="alert alert-primary" role="alert">
               <h3> You Have Successfuly Registered</h3>
            </div>
        </div>
        <div id="al2">
            <div class="alert alert-danger" role="alert">
               <h3>Please Enter Valid OTP</h3>
                           </div>
        </div>

    </div>
   



    <script>
        localStorage.removeItem('Num')
        document.getElementById('bts').addEventListener('click', function () {
            let x = Math.ceil(1000 + (3000 - 1000) * Math.random())
            alert(x)
            localStorage.setItem('Num', x);

        })
        document.getElementById('bts2').addEventListener('click', function () {
            if (document.getElementById('inputPassword4').value == localStorage.getItem('Num')) {
                document.querySelector('.alert-primary').style.display = 'block'
                document.querySelector('.alert-danger').style.display = 'none'
                setInterval(() => {
                    document.querySelector('.alert-primary').style.display = 'none'

                }, 3000);

            }
            else {
                document.querySelector('.alert-danger').style.display = 'block'
                document.querySelector('.alert-primary').style.display = 'none'
                setInterval(() => {
                    document.querySelector('.alert-danger').style.display = 'none'
                }, 3000);

            }
        })
    </script>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
        crossorigin="anonymous"></script>


</body>

</html>